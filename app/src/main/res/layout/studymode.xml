<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/True_black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/CurrentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/True_white"
            android:text="현재 시각"
            android:textSize="40dp"
            android:theme="@style/Text1_bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/CurrentTime_h_m_s"
            android:gravity="left"
            />
        <TextClock
            android:id="@+id/CurrentTime_h_m_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm:ss"
            android:format24Hour="hh:mm:ss"
            android:textSize="56dp"
            android:theme="@style/Text1_bold"
            android:textColor="@color/True_white"
            app:layout_constraintBottom_toTopOf="@+id/StudyTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CurrentTime"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/StudyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/True_white"
            android:text="공부 시각"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/CurrentTime_h_m_s"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:theme="@style/Text1_bold"
            android:gravity="left"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>